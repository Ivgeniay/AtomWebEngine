{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Backend",
            "type": "shell",
            "command": "dotnet run",
            "options": {
                "cwd": "${workspaceFolder}/backend/AtomWebEngine.WebApi"
            },
            "group": "build"
        },
        {
            "label": "Run Frontend",
            "type": "shell",
            "command": "npm start",
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "group": "build"
        },
        {
            "label": "Run GameCoreTests",
            "type": "shell",
            "command": "npm test",
            "options": {
                "cwd": "${workspaceFolder}/gameCoreTests"
            },
            "group": "test"
        }
    ]
}